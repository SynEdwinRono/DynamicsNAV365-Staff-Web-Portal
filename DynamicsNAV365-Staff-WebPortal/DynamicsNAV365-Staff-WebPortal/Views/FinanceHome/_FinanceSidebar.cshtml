@model DynamicsNAV365_Staff_WebPortal.Models.Account.EmployeeProfileModel
<aside class="left-side sidebar-offcanvas">
	<!-- sidebar: style can be found in sidebar.less -->
	<section class="sidebar">
		<!-- Sidebar user panel -->
		<div class="user-panel">
			<div class="pull-left image">
				@if (Model != null && Model.PassportAttached == true)
				{
					<img src="~/EmployeeData/@Model.EmployeePassportPath" class="img-circle" alt="User Image" />
				}
				else
				{
					<img src="~/Content/images/photo_placeholder.png" class="img-circle" alt="User Image" />
				}
			</div>
			<div class="pull-left info">
				<p>@HttpContext.Current.User.Identity.Name</p>
				<a href="#"><i class="fa fa-circle text-success"></i> Online</a>
			</div>
		</div>
		<!-- sidebar menu: : style can be found in sidebar.less -->
		<ul class="sidebar-menu">
			<li>
				<a href="@Url.Action("Index", "Home")">
					<i class="fa fa-dashboard"></i> <span>Dashboard</span>
				</a>
			</li>
			<li id="FinanceInfoMenuItem">
				<a href="@Url.Action("FinanceInfo", "FinanceHome")">
					<i class="fa fa-info"></i> <span>Financial Service Summary</span>
				</a>
			</li>
			<li id="ImprestRequestHistoryMenuItem">
				<a href="@Url.Action("PettyCashHistory", "PettyCash")">
					<i class="fa fa-balance-scale"></i> <span>Petty Cash Requests</span>
				</a>
			</li>
			<li id="ImprestRequestHistoryMenuItem">
				<a href="@Url.Action("ImprestRequestHistory", "Imprest")">
					<i class="fa fa-briefcase"></i> <span>Imprest Requests</span>
				</a>
			</li>
			<li id="ImprestRequestHistoryMenuItem">
				<a href="@Url.Action("ImprestSurrenderHistory", "ImprestSurrender")">
					<i class="fa fa-balance-scale"></i> <span>Imprest Surrender</span>
				</a>
			</li>
			<li id="ImprestRequestHistoryMenuItem">
				<a href="@Url.Action("FundsClaimHistory", "FundsClaim")">
					<i class="fa fa-money"></i> <span>Funds Claim</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- /.sidebar -->
</aside>




