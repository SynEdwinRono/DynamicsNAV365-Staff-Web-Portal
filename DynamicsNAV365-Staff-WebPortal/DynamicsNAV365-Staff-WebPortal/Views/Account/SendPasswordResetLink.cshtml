@using CaptchaMvc.HtmlHelpers
@using CaptchaMvc;

@model DynamicsNAV365_Staff_WebPortal.Models.Account.SendPasswordResetLinkModel
@{
	ViewBag.Title = "Password Reset";
}
<div class="row" style="margin-bottom:10px">
	<div class="col-sm-4 col-md-4 col-lg-4 col-sm-offset-4 col-md-offset-4 col-lg-offset-4">
		<div class="logo text-center" style="background-color:inherit">
			<a href="@Url.Action("Index", "Home")" class="simple-text">
				<img src="~/Content/images/logo.png" class="simple-logo" />
			</a>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-sm-4 col-md-4 col-lg-4 col-sm-offset-4 col-md-offset-4 col-lg-offset-4">
		<div class="card">
			<div class="card-header text-center" data-background-color="blue">
				<h4 class="title"><i>Reset Employee Portal Password</i></h4>
			</div>
			<div class="card-content">
				@using (Html.BeginForm("SendPasswordResetLink", "Account", FormMethod.Post, new { @class = "" }))
				{
					@Html.AntiForgeryToken()
					if (Model != null && Model.ErrorStatus == true)
					{
						<div class="alert alert-danger">
							<strong>Error! </strong>@Html.Raw(HttpUtility.HtmlDecode(Model.ErrorMessage))
						</div>
					}
					<div class="form-group label-floating">
						@Html.LabelFor(model => model.EmployeeNo, htmlAttributes: new { @class = "control-label" })
						@Html.EditorFor(model => model.EmployeeNo, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.EmployeeNo, "", new { @class = "text-danger" })
					</div>
					<div>
						@Html.MathCaptcha()
					</div>
					<p class="text-danger"><i>@ViewBag.CaptchaErrorMessage</i></p>

					<div class="form-group">
						<div class="row">
							<div class="col-md-8 col-lg-8">
								<button class="btn ladda-button" type="submit" data-style="slide-right" style="background-color:cadetblue">
									<span class="ladda-label">
										Send Password Reset Link
									</span>
								</button>
							</div>
							<div class="col-md-4 col-lg-4">
								<a href="@Url.Action("Login", "Account")" class="btn btn-danger">
									Cancel
								</a>
							</div>
						</div>
					</div>
				}
			</div>
			<div class="card-footer">

			</div>
		</div>
	</div>
</div>
@section scripts{
	<script type="text/javascript">

	</script>
}